<div class="site">
  <!-- Site Header -->
  <header class="site-header classic relative">
     <%= render 'letter_spring/header' %>
  </header>
  <!--/ Site Header -->
  <main class="site-main">
     <!-- Page header -->
     <div class="page-header page-header-sm">
        <h1 class="text-uppercase page-title">Thông báo</h1> </div>
     <!-- /Page header -->
     <!-- Breadcrumbs -->
     <div class="breadcrumb">
        <div class="container">
           <ol>
              <li><a href="<%= root_path %>">Trang chủ</a></li>
               <% if @news.type_vn == "Tin chuyên ngành" %>
                  <li><%= link_to "Tin chuyên ngành", { controller: "specialized_news", action: "index" } %></li>
               <% else %>
                  <li><%= link_to "Tin Việt Ren", { controller: "vietren_news", action: "index" } %></li>
               <% end %>
              <li class="active"><%= @news.title_vn %></li>
           </ol>
        </div>
     </div>
     <!-- /Breadcrumbs -->
     <div class="container">
        <div class="row">
            <div class="page-content col-md-9 padding-bottom-xl">
              <article class="post post-single">
                 <header>
                    <h3 class="post-title text-uppercase"><%= @news.title_vn %></h3>
                    <ul class="post-meta">
                        <li> <i class="fa fa-user"></i> <span class="text-uppercase">ĐĂNG BỞI:</span> <%= @company.name_vn %></li>
                        <li> <i class="fa fa-calendar"></i>
                           <time datetime="<%= @news.created_at.strftime("%d-%m-%Y") %>"><%= @news.created_at.strftime("%d-%m-%Y") %></time>
                        </li>
                        <% if @news.type_vn == "Tin chuyên ngành" %>
                           <li><i class="fa fa-th-large"></i>Tin chuyên ngành</li>
                        <% else %>
                           <li><i class="fa fa-th-large"></i>Tin Việt Ren</li>
                        <% end %>
                     </ul>
                 </header>
                 <div class="post-content">
                    <p><%= @news.content_vn.html_safe %></p>
                 </div>
              </article>
           </div>
           <aside class="sidebar sidebar-right col-md-3">
              <%= render 'letter_spring/right_menu' %>
           </aside>
        </div>
     </div>
  </main>
  <!-- Site Footer -->
  <footer class="site-footer">
     <%= render 'home/footer' %>
  </footer>
  <!-- /Site Footer -->
</div>
<!-- Scripts -->
<%= javascript_include_tag '/frontend/js/jquery.min.js' %>
<%= javascript_include_tag '/frontend/js/bootstrap/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/doubletaptogo.js' %>
<%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/functions.js' %>
<%= javascript_include_tag '/frontend/js/isotope.min.js' %>
<%= javascript_include_tag '/frontend/js/jquery.swipebox.js' %>
<%= javascript_include_tag '/frontend/js/waypoints/jquery.waypoints.min.js' %>
<!-- /Scripts -->
<!-- Revolution Slider -->
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.tools.min.js?rev=5.0' %>
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.revolution.min.js?rev=5.0' %>
<!-- /Revolution Slider -->