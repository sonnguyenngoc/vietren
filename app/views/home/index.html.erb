      </div>
   </section>
   <!-- /Services & Solutions -->
   <!-- Recent News -->
   <section id="recent-news" class="recent-news section bg-gray">
      <div class="container">
         <div class="row">
            <div class="col-md-12">
               <h2 class="title"><%= t(:lastest_news) %></h2>
               <div class="owl-nav text-right"> <span class="owlprev"><i class="fa fa-angle-left"></i></span> <span class="owlnext"><i class="fa fa-angle-right"></i></span> </div>
            </div>
         </div>
         <div class="owl-carousel">
            <% if params[:locale] == "en" %>
               <% @news.each do |item| %>
                  <article class="post">
                     <header><a href="<%= item.image_url.big_news %>" target="_blank"><img src="<%= item.image_url.medium_news %>" alt="<%= item.title_en %>"></a></header>
                     <h3 class="post-title"><%= item.title_en %></h3>
                     <ul class="post-meta">
                        <li> <i class="fa fa-calendar"></i>
                           <time datetime="<%= item.created_at.strftime("%d-%m-%Y") %>"><%= item.created_at.strftime("%d-%m-%Y") %></time>
                        </li>
                        <% if item.type_vn == "Tin chuyên ngành" %>
                           <li><i class="fa fa-th-large"></i><%= link_to item.type_en, { controller: "specialized_news", action: "index" } %></li>
                        <% else %>
                           <li><i class="fa fa-th-large"></i><%= link_to item.type_en, { controller: "vietren_news", action: "index" } %></li>
                        <% end %>
                     </ul>
                     <div class="post-content">
                        <p class="post-desc"><%= truncate(strip_tags(item.content_en), length: 150) %></p>
                        <%= link_to "Đọc tiếp", { controller: "news_single", action: "index", news_id: item.id }, class: "btn btn-md btn-gradient btn-shadow" %>
                     </div>
                  </article>
               <% end %>
            <% else %>
               <% @news.each do |item| %>
                  <article class="post">
                     <header><a href="<%= item.image_url.big_news %>" target="_blank"><img src="<%= item.image_url.medium_news %>" alt="<%= item.title_vn %>"></a></header>
                     <h3 class="post-title nowrap-ellipsis" title="<%= item.title_vn %>"><%= item.title_vn %></h3>
                     <ul class="post-meta">
                        <li> <i class="fa fa-calendar"></i>
                           <time datetime="<%= item.created_at.strftime("%d-%m-%Y") %>"><%= item.created_at.strftime("%d-%m-%Y") %></time>
                        </li>
                        <li> <i class="fa fa-th-large"></i><%= item.type_vn %></li>
                     </ul>
                     <div class="post-content">
                        <p class="post-desc nowrap-ellipsis"><%= truncate(strip_tags(item.content_vn), length: 150) %></p>
                        <%= link_to "Đọc tiếp", { controller: "news_single", action: "index", news_id: item.id }, class: "btn btn-md btn-gradient btn-shadow" %>
                     </div>
                  </article>
               <% end %>
            <% end %>
         </div>
      </div>
   </section>
   <!-- /Recent News -->
   <!-- Recent Portfolio -->
   <section class="bg-dark section padding-after" id="projects">
      <div class="container">
         <div class="row">
            <div class="col-md-12">
               <div class="projects">
                  <div class="projects-header clearfix">
                     <h2 class="title projects-title visible-lg pull-left"><%= t(:constructions) %></h2>
                     <ul class="filter filter-dark pull-right">
                        <li>
                           <button data-filter="*" class="selected"><%= t(:all) %></button>
                        </li>
                        <% if params[:locale] == "en" %>
                           <% @project_tags.each do |item| %>
                              <li>
                                 <button data-filter="<%= item.id %>"><%= item.title_en %></button>
                              </li>
                           <% end %>
                        <% else %>
                           <% @project_tags.each do |item| %>
                              <li>
                                 <button data-filter="<%= item.id %>"><%= item.title_vn %></button>
                              </li>
                           <% end %>
                        <% end %>
                     </ul>
                  </div>
                  <div class="row projects-content">
                     <% if params[:locale] == "en" %>
                        <% @projects.each do |item| %>
                           <div class="projects-item col-xs-6 col-md-4 <%= item.project_tag_id %>">
                              <div class="projects-item-wrap"> <img src="<%= item.image_url.medium_image %>" alt="<%= item.name_vn %>">
                                 <div class="project-hover">
                                    <h3 class="project-title text-uppercase"><%= item.project_tag.title_en %></h3>
                                    <p class="project-desc"><%= item.name_en %></p>
                                    <%= link_to "Read more", { controller: "project_detail", action: "index", project_id: item.id }, class: "btn btn-md" %>
                                 </div>
                              </div>
                           </div>
                        <% end %>
                     <% else %>
                        <% @projects.each do |item| %>
                           <div class="projects-item col-xs-6 col-md-4 <%= item.project_tag_id %>">
                              <div class="projects-item-wrap"> <img src="<%= item.image_url.medium_image %>" alt="<%= item.name_vn %>">
