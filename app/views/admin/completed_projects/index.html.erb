<p id="notice"><%= notice %></p>

<h1>Listing Completed Projects</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Tag vn</th>
      <th>Title vn</th>
      <th>Content vn</th>
      <th>Tag en</th>
      <th>Title en</th>
      <th>Content en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed_projects.each do |completed_project| %>
      <tr>
        <td><%= completed_project.image_url %></td>
        <td><%= completed_project.tag_vn %></td>
        <td><%= completed_project.title_vn %></td>
        <td><%= completed_project.content_vn %></td>
        <td><%= completed_project.tag_en %></td>
        <td><%= completed_project.title_en %></td>
        <td><%= completed_project.content_en %></td>
        <td><%= link_to 'Show', completed_project %></td>
        <td><%= link_to 'Edit', edit_completed_project_path(completed_project) %></td>
        <td><%= link_to 'Destroy', completed_project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

