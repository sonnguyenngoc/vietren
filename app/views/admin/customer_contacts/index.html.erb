<h1>Listing Customer Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_contacts.each do |customer_contact| %>
      <tr>
        <td><%= customer_contact.name %></td>
        <td><%= customer_contact.email %></td>
        <td><%= customer_contact.subject %></td>
        <td><%= customer_contact.message %></td>
        <td><%= link_to 'Show', customer_contact %></td>
        <td><%= link_to 'Edit', edit_customer_contact_path(customer_contact) %></td>
        <td><%= link_to 'Destroy', customer_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

