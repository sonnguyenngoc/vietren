<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table>
  <thead>
    <tr>
      <th>Image url</th>
      <th>Name vn</th>
      <th>Name en</th>
      <th>Total value</th>
      <th>Cost performance</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Name company</th>
      <th>Name country</th>
      <th>Tag</th>
      <th>Content vn</th>
      <th>Content en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.image_url %></td>
        <td><%= project.name_vn %></td>
        <td><%= project.name_en %></td>
        <td><%= project.total_value %></td>
        <td><%= project.cost_performance %></td>
        <td><%= project.start_at %></td>
        <td><%= project.end_at %></td>
        <td><%= project.name_company %></td>
        <td><%= project.name_country %></td>
        <td><%= project.tag_id %></td>
        <td><%= project.content_vn %></td>
        <td><%= project.content_en %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

