<% if @gallery.errors.any? %>
  <div id="error_explanation">
    <% @gallery.errors.full_messages.each do |message| %>
      <p class="label label-warning"><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_for [:admin, @gallery], html: {class: "form-horizontal"} do |f| %>
    
    <div class="tabbable tab-content-bordered">
        <ul class="nav nav-tabs bg-primary">
            <li class="active"><a href="#control-tab1" data-toggle="tab">Tiếng Việt</a></li>
            <li><a href="#control-tab2" data-toggle="tab">English </a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane has-padding active" id="control-tab1">
                <div class="form-group">
                    <%= f.label "Picture: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                      <%= f.file_field :image_url, class: "file-styled" %>
                      <span class="help-block">Accepted formats: gif, png, jpg.</span>
                      <%= image_tag(@gallery.image_url.medium_gallery, size: "356x237", class: "img-rouded") %>
                    </div>
                </div>
                <div class="form-group">
                    <%= f.label "Type: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.select(:type_vn, ['Hình ảnh các công trình đã hoàn thành', 'Hình ảnh các dự án đầu tư', 'Hình ảnh các công trình thi công'], {}, { :class => 'select' })%>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= f.label "Title: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.text_field :title_vn, class: "form-control" %>
                    </div>
                </div>
            
                <div class="form-group">
                    <%= f.label "Description: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.text_area :description_vn, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>
                    
                <div class="form-group">
                  <%= f.label "Listing Photos: ", class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                      <% index = 0 %>
                      <%= f.fields_for :gallery_details do |ff| %>
                          <% g = @gallery.gallery_details[index] %>
                          <%= ff.hidden_field :id %>
                          
                          <div class="col-lg-8 padding-bottom">
                              <%= ff.file_field :image_url, class: "file-styled margin-bottom" %>
                              <br /><br />
                          </div>
                          <% if g.image_url? %>
                            <div class="col-lg-3 padding-bottom">
                                <img style="width: 100%; margin-bottom: 10px;" src="<%= g.image_url if g.image_url? %>" />
                            </div>
                          <% end %>
                          <% if g.image_url? %>
                            <div class="col-lg-1 padding-bottom">
                                <%= ff.check_box :_destroy %>
                                <%= ff.label :_destroy, 'Remove' %>
                            </div>
                          <% end %>
                        <% index += 1 %>
                      <% end %>
                  </div>
                </div>
            </div>

            <div class="tab-pane has-padding" id="control-tab2">
                <div class="form-group">
                    <%= f.label "Type: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.select(:type_en, ['Pictures of completed construction projects', 'Pictures of investment projects', 'Pictures of construction work'], {}, { :class => 'select' })%>
                    </div>
                </div>
                    
                <div class="form-group">
                    <%= f.label "Title: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.text_field :title_en, class: "form-control" %>
                    </div>
                </div>
            
                <div class="form-group">
                    <%= f.label "Description: ", class: "col-lg-2 control-label" %>
                    <div class="col-lg-10">
                        <%= f.text_area :description_en, rows: "5", cols: "5", class: "form-control" %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right margin-submit">
        <%= button_tag 'Save <i class="icon-plus22 position-right"></i>'.html_safe, class: "btn btn-primary"%>
        <%= link_to 'Cancel <i class="icon-cross2"></i>'.html_safe, admin_galleries_path,class: "btn bg-warning-400"%>
    </div>
<% end %>