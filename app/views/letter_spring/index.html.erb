<div class="site">
  <!-- Site Header -->
  <header class="site-header classic relative">
    <%= render 'header' %>
  </header>
  <!--/ Site Header -->
  <main class="site-main">
     <!-- Page header -->
     <div class="page-header page-header-sm">
        <h1 class="text-uppercase page-title"><%= t(:letter_spring) %></h1> </div>
     <!-- /Page header -->
     <!-- Breadcrumbs -->
     <div class="breadcrumb">
        <div class="container">
           <ol>
              <li><a href="<%= root_path %>"><%= t(:home) %></a></li>
              <li class="active"><%= t(:letter_spring) %></li>
           </ol>
        </div>
     </div>
     <!-- /Breadcrumbs -->
     <div class="container">
        <div class="row">
           <aside class="sidebar sidebar-left col-md-3">
              <%= render 'right_menu' %>
           </aside>
           <div class="page-content col-md-9 padding-bottom-xl">
              <article class="post post-single">
                 <header> <img src="/frontend/images/image_1.jpg" alt="<%= @spring_letters.title_vn %>">
                    <h3 class="post-title text-uppercase"><%= @spring_letters.title_vn %></h3>
                    <ul class="post-meta">
                       <li> <i class="fa fa-calendar"></i>
                          <time datetime="<%= @spring_letters.created_at %>"><%= @spring_letters.created_at %></time>
                       </li>
                    </ul>
                 </header>
                 <div class="post-content">
                    <%= @spring_letters.content_vn.html_safe %>
                 </div>
              </article>
           </div>
        </div>
     </div>
  </main>
  <!-- Site Footer -->
  <footer class="site-footer">
    <%= render 'home/footer' %>
  </footer>
  <!-- /Site Footer -->
</div>
<!-- Scripts -->
<%= javascript_include_tag '/frontend/js/jquery.min.js' %>
<%= javascript_include_tag '/frontend/js/bootstrap/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/doubletaptogo.js' %>
<%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/functions.js' %>
<%= javascript_include_tag '/frontend/js/isotope.min.js' %>
<%= javascript_include_tag '/frontend/js/jquery.swipebox.js' %>
<%= javascript_include_tag '/frontend/js/waypoints/jquery.waypoints.min.js' %>
<!-- /Scripts -->
<!-- Revolution Slider -->
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.tools.min.js?rev=5.0' %>
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.revolution.min.js?rev=5.0' %>
<!-- /Revolution Slider -->