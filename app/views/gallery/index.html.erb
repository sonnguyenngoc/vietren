<div class="site">
  <!-- Site Header -->
  <header class="site-header classic relative">
     <%= render 'letter_spring/header' %>
  </header>
  <!--/ Site Header -->
  <main class="site-main">
     <!-- Page header -->
     <div class="page-header page-header-sm">
        <h1 class="text-uppercase page-title"><%= t(:construction_works) %></h1>
     </div>
     <!-- /Page header -->
     <!-- Breadcrumbs -->
     <div class="breadcrumb">
        <div class="container">
           <ol>
              <li><a href="<%= root_path %>"><%= t(:home) %></a></li>
              <li><%= link_to t(:gallery), "#" %></li>
              <li class="active"><%= t(:construction_works) %></li>
           </ol>
        </div>
     </div>
     <!-- /Breadcrumbs -->
      <div class="container">
         <div class="row">
            <div class="page-content col-md-9">
               <% if params[:locale] == "en" %>
                  <% @galleries.each do |item| %>
                     <article class="post">
                        <header>
                           <a href="<%= item.image_url %>" target="_blank"><img src="<%= item.image_url.big_gallery %>" alt="<%= item.title_en %>"></a>
                           <h3 class="post-title text-uppercase"><%= item.title_en %></h3>
                           <ul class="post-meta">
                              <li> <i class="fa fa-user"></i> <span class="text-uppercase">POSTED BY:</span> <%= @company.name_en %></li>
                              <li> <i class="fa fa-calendar"></i>
                                 <time datetime="<%= item.created_at.strftime("%d-%m-%Y") %>"><%= item.created_at.strftime("%d-%m-%Y") %></time>
                              </li>
                              <li><i class="fa fa-th-large"></i><%= item.type_en %></li>
                           </ul>
                        </header>
                        <div class="post-content">
                           <p class="post-desc"><%= item.description_en %></p>
                           <%= link_to "Read more", { controller: "gallery_detail", action: "index", gallery_id: item.id }, class: "btn btn-md btn-gradient btn-shadow" %>
                        </div>
                     </article>
                  <% end %>
               <% else %>
                  <% @galleries.each do |item| %>
                     <article class="post">
                        <header>
                           <a href="<%= item.image_url %>" target="_blank"><img src="<%= item.image_url.big_gallery %>" alt="<%= item.title_vn %>"></a>
                           <h3 class="post-title text-uppercase"><%= item.title_vn %></h3>
                           <ul class="post-meta">
                              <li> <i class="fa fa-user"></i> <span class="text-uppercase">ĐĂNG BỞI:</span> <%= @company.name_vn %></li>
                              <li> <i class="fa fa-calendar"></i>
                                 <time datetime="<%= item.created_at.strftime("%d-%m-%Y") %>"><%= item.created_at.strftime("%d-%m-%Y") %></time>
                              </li>
                              <li><i class="fa fa-th-large"></i><%= item.type_vn %></li>
                           </ul>
                        </header>
                        <div class="post-content">
                           <p class="post-desc"><%= item.description_vn %></p>
                           <%= link_to "Xem tiếp", { controller: "gallery_detail", action: "index", gallery_id: item.id }, class: "btn btn-md btn-gradient btn-shadow" %>
                        </div>
                     </article>
                  <% end %>
               <% end %>
            </div>
            <aside class="sidebar sidebar-right col-md-3">
               <%= render '/letter_spring/right_menu' %>
               <div class="widget widget-download">
                  <h3 class="widget-title text-uppercase small-margin">Thư viện ảnh - Dự án đầu tư</h3>
                  <div class="download">
                     <a href="other/specification.pdf" target="_blank"> <i class="fa fa-file-pdf-o"></i> Download PDF brochure </a>
                  </div>
               </div>
            </aside>
         </div>
      </div>
   </main>
  <!-- Site Footer -->
  <footer class="site-footer">
     <%= render 'home/footer' %>
  </footer>
  <!-- /Site Footer -->
</div>
<!-- Scripts -->
<%= javascript_include_tag '/frontend/js/jquery.min.js' %>
<%= javascript_include_tag '/frontend/js/bootstrap/bootstrap.min.js' %>
<%= javascript_include_tag '/frontend/js/doubletaptogo.js' %>
<%= javascript_include_tag '/frontend/js/owlcarousel/owl.carousel.min.js' %>
<%= javascript_include_tag '/frontend/js/functions.js' %>
<%= javascript_include_tag '/frontend/js/isotope.min.js' %>
<%= javascript_include_tag '/frontend/js/jquery.swipebox.js' %>
<%= javascript_include_tag '/frontend/js/waypoints/jquery.waypoints.min.js' %>
<!-- /Scripts -->
<!-- Revolution Slider -->
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.tools.min.js?rev=5.0' %>
<%= javascript_include_tag '/frontend/revolution/js/jquery.themepunch.revolution.min.js?rev=5.0' %>
<!-- /Revolution Slider -->